    <form action="/contact" method="POST">
      <label for="person">Enter name of the person: </label>
      <div></div>
      <input type="text" id="person" name="person" value="<%= qs.person%>" />
      <br />
      <label for="gender">Enter the gender: </label>
      <div></div>

      <input type="text" id="gender" name="gender" value="<%= qs.gender%>" />
      <br />

      <label for="age">Enter the age: </label>
      <div></div>

      <input type="text" id="age" name="age" value="<%= qs.age%>" />
      <br />

      <label for="study">Enter the study: </label>
      <div></div>

      <input type="text" id="study" name="study" value="<%= qs.study%>" />
      <br />

      <button
        type="submit"
        style="padding: 20px; border-radius: 15px; background-color: coral"
      >
        Let's Go!
      </button>
    </form>
  </body>
</html>
